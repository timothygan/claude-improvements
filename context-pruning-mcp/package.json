{
  "name": "context-pruning-mcp-server",
  "version": "1.0.0",
  "description": "Intelligent Context Pruning MCP Server for Claude Code - automatically optimizes conversation context through smart summarization and priority-based retention",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "context-pruning-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "context-pruning",
    "claude-code",
    "ai",
    "optimization",
    "summarization"
  ],
  "author": "Context Pruning Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "natural": "^8.1.0",
    "stemmer": "^2.0.1",
    "stopword": "^3.1.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/natural": "^5.1.5",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "package.json"
  ]
}
